# Backup Manager GDrive Configuration
# Copy this file to .env and update with your values

# =============================================================================
# BACKUP SETTINGS
# =============================================================================
BACKUP_BACKUP_NAME_PREFIX=server-backup
BACKUP_COMPRESSION_LEVEL=6
BACKUP_MAX_DATABASE_BACKUPS=50
BACKUP_MAX_FILES_BACKUPS=1

# =============================================================================
# GOOGLE DRIVE CONFIGURATION
# =============================================================================
# OAuth2 credentials file path (download from Google Cloud Console)
BACKUP_GOOGLE_DRIVE__CREDENTIALS_FILE=credentials/gdrive.json

# Token storage location (auto-generated after first auth)
BACKUP_GOOGLE_DRIVE__TOKEN_FILE=credentials/token.json

# Google Drive folder name (will be created automatically)
BACKUP_GOOGLE_DRIVE__FOLDER_NAME=Server Backups

# Upload chunk size in bytes (1MB default)
BACKUP_GOOGLE_DRIVE__CHUNK_SIZE=1048576

# Optional: Use specific folder ID instead of folder name
# BACKUP_GOOGLE_DRIVE__FOLDER_ID=your_folder_id_here

# =============================================================================
# MYSQL DATABASE CONFIGURATION
# =============================================================================
BACKUP_MYSQL_HOST=localhost
BACKUP_MYSQL_USER=backup_user
BACKUP_MYSQL_PASSWORD=your_secure_password_here

# Comma-separated list of databases to backup
# Leave empty to backup all databases
BACKUP_MYSQL_DATABASES=

# Examples:
# BACKUP_MYSQL_DATABASES=wordpress,nextcloud,app_db
# BACKUP_MYSQL_DATABASES=production_db

# =============================================================================
# FILES CONFIGURATION  
# =============================================================================
# Files and directories to backup are configured in files_config.json
# See files_config.json for detailed configuration options